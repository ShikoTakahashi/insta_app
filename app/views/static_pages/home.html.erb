<% provide(:title, 'ホーム') %>
<div class="row">
  <% if user_signed_in?%>
    <div class="col-md-8 col-md-offset-2">
      <h2>お気に入りの投稿</h2>
      <%= render 'shared/feed' %>
    </div>
  <% else %>
    <div class="col-md-6 col-md-offset-3">
      <div class="login_box">
        <p>ポートフォリオ用ログインができます</p>
        <%= form_for(@user, url: user_session_path) do |f| %>
          <%= f.hidden_field :email, :value => "test@test.com" %>
          <%= f.hidden_field :password, :value => "testuser" %>
          <div class="actions btn_position">
            <%= f.submit "テストユーザーでログイン", class: "btn btn-primary btn-block" %>
          </div>
        <% end %>
      </div>
      <div class="login_box">
        <h1>Instagram-Test</h1>
        <%= render 'users/sessions/new' %>
        <p>または</p>
        <%= link_to 'Facebookでログイン', user_facebook_omniauth_authorize_path, class: "btn btn-primary btn-block" %><br>
        <%= link_to 'パスワードをお忘れた場合', new_user_password_path %><br>
      </div>
      <div class="login_box">
        <p>アカウントをお持ちでないですか？</p>
        <%= link_to 'Facebookで登録する', user_facebook_omniauth_authorize_path %>
      </div>
    </div>
  <% end %>
</div>
