<% provide(:title, 'プロフィールの編集') %>
<h1>プロフィールの編集</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= devise_error_messages! %>

    <h3>■公開情報</h3>
    <div class="field">
      <%= f.label :full_name %>
      <%= f.text_field :full_name, autofocus: true, autocomplete: "off", class: 'form-control' %>
    </div>
    <div class="field">
      <%= f.label :user_name %><br />
      <%= f.text_field :user_name, autocomplete: "off", class: 'form-control' %>
    </div>
    <div class="field">
      <%= f.label :website, "ウェブサイト" %><br />
      <%= f.text_field :website, class: 'form-control' %>
    </div>
    <div class="field">
      <%= f.label :comment, "自己紹介" %><br />
      <%= f.text_area :comment, class: 'form-control' %>
    </div>
    <div class="field">
      <%= f.label :profpicture, "プロフィール画像" %><br />
      <%= f.file_field :profpicture, accept: 'image/jpeg,image/png', class: 'form-control' %>
    </div>
    <h3>■非公開情報</h3>
    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autocomplete: "email", class: 'form-control' %>
    </div>
    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div><%= t('.currently_waiting_confirmation_for_email', email: resource.unconfirmed_email) %></div>
    <% end %>
    <div class="field">
      <%= f.label :phone_number, "電話番号" %><br />
      <%= f.text_field :phone_number, class: 'form-control' %>
    </div>
    <div class="field">
      <%= f.label :sex, "性別" %><br />
      <%= f.select(:sex,[["男性", "男性"], ["女性", "女性"]], class: 'form-control', :prompt => "性別を選択して下さい") %>
    </div>
    <p>パスワードを変更</p>
    <div class="field">
      <%= f.label :password %> <i>変更する場合のみ入力してください（6字以上）</i><br />
      <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
    </div>
    <div class="attention_box">
      <div class="field">
        <%= f.label :current_password %> <i>更新する場合は、現在のパスワードを入力してください</i><br />
        <%= f.password_field :current_password, autocomplete: "current-password", class: 'form-control' %>
      </div>
      <div class="actions">
        <%= f.submit "更新する", class: "btn btn-primary btn-block" %>
      </div>
    </div>
  <% end %>

    <h3>アカウントを削除する</h3>
    <%= link_to 'アカウントを削除する', registration_path(resource_name), data: { confirm: "本当に削除してもよろしいですか？" }, method: :delete, class: "btn btn-primary" %><br>
  </div>
</div>

<script type="text/javascript">
  $('#user_profpicture').bind('change', function() {
    var size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > 5) {
      alert('5MB以上のファイルはアップロードできません');
    }
  });
</script>
